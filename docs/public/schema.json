{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spec.manifesto-ai.dev/schema.json",
  "title": "Manifesto Snapshot",
  "description": "Machine-readable definition of the Manifesto Snapshot surface.",
  "type": "object",
  "required": ["data", "state", "derived", "async", "actions"],
  "properties": {
    "version": { "type": "string", "description": "Semantic version of the Snapshot contract." },
    "data": { "type": "object", "additionalProperties": true },
    "state": { "type": "object", "additionalProperties": true },
    "derived": { "type": "object", "additionalProperties": true },
    "async": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/asyncState" }
    },
    "actions": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/actionDescriptor" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "asyncState": {
      "type": "object",
      "required": ["status", "data", "error"],
      "properties": {
        "status": { "enum": ["idle", "pending", "success", "error"] },
        "data": {},
        "error": {}
      },
      "additionalProperties": false
    },
    "actionDescriptor": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean" },
        "reason": { "type": "string" },
        "preconditions": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    }
  }
}
