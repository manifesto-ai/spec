{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spec.manifesto-ai.dev/schema.json",
  "title": "Manifesto Snapshot",
  "description": "Machine-readable definition of the Manifesto DomainSnapshot surface.",
  "type": "object",
  "required": ["data", "state", "derived", "validity", "timestamp", "version"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 0,
      "description": "Monotonic modification counter starting at 0."
    },
    "timestamp": {
      "type": "integer",
      "minimum": 0,
      "description": "Milliseconds since Unix epoch when the snapshot was produced."
    },
    "data": {
      "type": "object",
      "description": "Domain data (schema-defined).",
      "additionalProperties": true
    },
    "state": {
      "type": "object",
      "description": "Ephemeral system/UI state.",
      "additionalProperties": true
    },
    "derived": {
      "type": "object",
      "description": "Computed values keyed by SemanticPath.",
      "additionalProperties": true
    },
    "validity": {
      "type": "object",
      "description": "Validation results keyed by SemanticPath.",
      "additionalProperties": { "$ref": "#/$defs/validationResult" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "validationResult": {
      "type": "object",
      "required": ["valid", "issues"],
      "properties": {
        "valid": { "type": "boolean" },
        "issues": {
          "type": "array",
          "items": { "$ref": "#/$defs/validationIssue" }
        }
      },
      "additionalProperties": false
    },
    "validationIssue": {
      "type": "object",
      "required": ["code", "message", "path", "severity"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "path": { "type": "string", "description": "SemanticPath for the issue location." },
        "severity": { "enum": ["error", "warning", "info", "suggestion"] },
        "suggestedFix": { "$ref": "#/$defs/suggestedFix" }
      },
      "additionalProperties": false
    },
    "suggestedFix": {
      "type": "object",
      "required": ["description", "value"],
      "properties": {
        "description": { "type": "string" },
        "value": {}
      },
      "additionalProperties": false
    }
  }
}
